# Safe Drive Configuration for OBS Streaming (Method 2)

# Application Settings
APP_NAME=Safe_Drive
APP_VERSION=1.0.0
DEBUG=False

# Security Settings
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Streaming Settings (Method 2 - OBS)
USE_STREAM=True
STREAM_URL=http://host.docker.internal:8080/stream.mjpg
STREAM_TYPE=mjpeg

# Local camera settings (not used when USE_STREAM=True)
CAMERA_INDEX=0
CAMERA_FALLBACK_INDEX=1

# Model Settings
MODEL_PATH=models/emotion_model_trained.h5
DATA_PATH=data/fer2013.csv
SHAPE_PREDICTOR_PATH=models/shape_predictor_68_face_landmarks.dat

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance Settings
MAX_FPS=30
FRAME_SKIP=1

# Dlib model URL
Dlib_URL=https://dlib.net/files/shape_predictor_68_face_landmarks.dat.bz2